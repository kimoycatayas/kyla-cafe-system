generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String           @id @default(cuid())
  email             String           @unique
  passwordHash      String
  name              String           @default("")
  pinHash           String?          @default("")
  role              UserRole         @default(CASHIER)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  profile           BusinessProfile?
  refreshTokens     RefreshToken[]
  orders            Order[]          @relation("OrderCashier")
  discountsApplied  OrderDiscount[]  @relation("DiscountAppliedBy")
  discountsApproved OrderDiscount[]  @relation("DiscountApprovedBy")
  paymentsProcessed Payment[]        @relation("PaymentProcessedBy")
}

model RefreshToken {
  id         String   @id @default(cuid())
  token      String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userAgent  String?
  ipAddress  String?
}

model BusinessProfile {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String   @unique
  businessName  String
  industry      String?
  fullName      String?
  contactNumber String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Product {
  id        String   @id @default(cuid())
  name      String
  sku       String   @unique
  price     Decimal  @db.Decimal(10, 2)
  cost      Decimal  @db.Decimal(10, 2)
  barcode   String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  inventory Inventory?
  orderItems OrderItem[]
}

model Inventory {
  id                String   @id @default(cuid())
  product           Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId         String   @unique
  quantity          Int      @default(0)
  lowStockThreshold Int      @default(5)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique
  cashier       User        @relation("OrderCashier", fields: [cashierId], references: [id])
  cashierId     String
  status        OrderStatus @default(OPEN)
  subtotal      Decimal     @db.Decimal(12, 2)
  discountTotal Decimal     @db.Decimal(12, 2)
  totalDue      Decimal     @db.Decimal(12, 2)
  totalPaid     Decimal     @db.Decimal(12, 2)
  changeDue     Decimal     @db.Decimal(12, 2)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]
  discounts     OrderDiscount[]
  payments      Payment[]
}

model OrderItem {
  id                String    @id @default(cuid())
  order             Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId           String
  product           Product?  @relation(fields: [productId], references: [id])
  productId         String?
  nameSnapshot      String
  notes             String?
  qty               Int
  unitPrice         Decimal   @db.Decimal(12, 2)
  lineSubtotal      Decimal   @db.Decimal(12, 2)
  lineDiscountTotal Decimal   @db.Decimal(12, 2)
  lineTotal         Decimal   @db.Decimal(12, 2)
}

model DiscountType {
  id                 String            @id @default(cuid())
  name               String
  type               DiscountTypeKind
  value              Decimal           @db.Decimal(10, 2)
  scope              DiscountScope
  requiresManagerPin Boolean           @default(false)
  discounts          OrderDiscount[]
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

model OrderDiscount {
  id                  String        @id @default(cuid())
  order               Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId             String
  discountType        DiscountType  @relation(fields: [discountTypeId], references: [id])
  discountTypeId      String
  amount              Decimal       @db.Decimal(12, 2)
  appliedByUser       User          @relation("DiscountAppliedBy", fields: [appliedByUserId], references: [id])
  appliedByUserId     String
  approvedByManager   User?         @relation("DiscountApprovedBy", fields: [approvedByManagerId], references: [id])
  approvedByManagerId String?
  createdAt           DateTime      @default(now())
}

model Payment {
  id                String        @id @default(cuid())
  order             Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId           String
  method            PaymentMethod
  amount            Decimal       @db.Decimal(12, 2)
  tenderedAmount    Decimal?      @db.Decimal(12, 2)
  changeGiven       Decimal?      @db.Decimal(12, 2)
  externalReference String?
  processedByUser   User          @relation("PaymentProcessedBy", fields: [processedByUserId], references: [id])
  processedByUserId String
  createdAt         DateTime      @default(now())
}

enum UserRole {
  CASHIER
  MANAGER
  ADMIN
}

enum OrderStatus {
  OPEN
  PAID
  VOID
  REFUNDED
}

enum DiscountTypeKind {
  PERCENT
  FIXED
}

enum DiscountScope {
  ORDER
  ITEM
}

enum PaymentMethod {
  CASH
  CARD
  GCASH
  PAYMAYA
  STATIC_QR
  CONTACTLESS
}
